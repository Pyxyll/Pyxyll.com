---
// import NavBar from "../components/NavBar.astro";
import { ViewTransitions } from "astro:transitions";
import NavBar from "../components/NavBar.svelte";
import PageFooter from "../components/PageFooter.astro";
import "../styles/global.css";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <title>{title}</title>
    <meta name="description" content="Your website should have a personality" />
    <meta property="og:title" content="Pyxyll" />
    <meta property="og:url" content="https://pyxyll.com" />
    <meta
      name="image"
      property="og:image"
      content="https://pyxyll.com/images/pyxyll-screenshot.png"
    />
    <meta
      property="og:description"
      content="Your website should have a personality"
    />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Pyxyll" />
    <ViewTransitions />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>

  <body>
    <!-- <NavBar /> -->
    <NavBar client:load />
    <slot />
    <PageFooter />
  </body>
</html>
