---
const { buttonText } = Astro.props;
---

<a href="#" class="btn"
  >{buttonText}
  <img class="arrow" src="images/UI/arrow-down-right.svg" alt="" /></a
>

<style>
  .btn {
    top: 0;
    left: 0;
    transition: all 0.15s linear 0s;
    position: relative;
    display: inline-block;
    padding: 15px 25px;
    background-color: white;
    text-transform: uppercase;
    color: black;
    letter-spacing: 1px;
    box-shadow: 6px 6px 0 black;
    text-decoration: none;
    border-style: solid;
  }
  .btn:hover {
    top: 3px;
    left: 3px;
    box-shadow: 3px 3px 0 black;
  }
  .arrow {
    width: 15px;
    padding: 0px 0px 0px 10px;
    transition: 0.3s;
  }

  .btn:hover .arrow {
    transform: rotate(-45deg) translateX(5px) translateY(3px);
    transition: 0.3s;
    padding: 0px 20px 0px 15px;
  }
  .btn:hover::after {
    top: 1px;
    left: 2px;
    width: 4px;
    height: 4px;
  }
  .btn:hover::before {
    bottom: 2px;
    right: 1px;
    width: 4px;
    height: 4px;
  }
  .btn::after {
    transition: all 0.15s linear 0s;
    content: "";
    position: absolute;
    top: 2px;
    left: 4px;
    width: 8px;
    height: 8px;
    background-color: black;
    transform: rotate(45deg);
    z-index: -1;
  }
  .btn::before {
    transition: all 0.15s linear 0s;
    content: "";
    position: absolute;
    bottom: 4px;
    right: 2px;
    width: 8px;
    height: 8px;
    background-color: black;
    transform: rotate(45deg);
    z-index: -1;
  }

  a.btn {
    position: relative;
  }

  a:active.btn {
    top: 6px;
    left: 6px;
    box-shadow: none;
  }
  a:active.btn:before {
    bottom: 1px;
    right: 1px;
  }
  a:active.btn:after {
    top: 1px;
    left: 1px;
  }
</style>
