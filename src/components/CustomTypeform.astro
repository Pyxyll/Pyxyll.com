<style>
  .contact-form {
    width: 80%;
    margin: 0 auto;
    font-family: Arial, sans-serif;
  }

  .contact-form label {
    display: block;
    margin-bottom: 10px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .contact-form input[type="text"],
  .contact-form input[type="email"],
  .contact-form textarea,
  .contact-form input[type="file"] {
    width: 100%;
    padding: 15px;
    border: none;
    border-style: solid;
    border-width: 2px;
    margin-bottom: 20px;
    box-sizing: border-box;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.15s linear;
  }

  .contact-form input[type="text"]:focus,
  .contact-form input[type="email"]:focus,
  .contact-form textarea:focus {
    outline: none;
    box-shadow: -6px 6px 0 black;
  }

  .contact-form textarea {
    resize: none;
    height: 150px;
  }

  .contact-form input[type="checkbox"] {
    margin-right: 10px;
  }

  .btn {
    top: 0;
    left: 0;
    transition: all 0.15s linear 0s;
    position: relative;
    display: inline-block;
    padding: 15px 25px;
    background-color: white;
    text-transform: uppercase;
    color: black;
    letter-spacing: 1px;
    box-shadow: -6px 6px 0 black;
    text-decoration: none;
    border-style: solid;
  }
  .btn:hover {
    top: 3px;
    left: -3px;
    box-shadow: -3px 3px 0 black;
  }
  .btn:hover::after {
    top: 1px;
    left: -2px;
    width: 4px;
    height: 4px;
  }
  .btn:hover::before {
    bottom: -2px;
    right: 1px;
    width: 4px;
    height: 4px;
  }
  .btn::after {
    transition: all 0.15s linear 0s;
    content: "";
    position: absolute;
    top: 2px;
    left: -4px;
    width: 8px;
    height: 8px;
    background-color: black;
    transform: rotate(45deg);
    z-index: -1;
  }
  .btn::before {
    transition: all 0.15s linear 0s;
    content: "";
    position: absolute;
    bottom: -4px;
    right: 2px;
    width: 8px;
    height: 8px;
    background-color: black;
    transform: rotate(45deg);
    z-index: -1;
  }

  a.btn {
    position: relative;
  }

  a:active.btn {
    top: 6px;
    left: -6px;
    box-shadow: none;
  }
  a:active.btn:before {
    bottom: 1px;
    right: 1px;
  }
  a:active.btn:after {
    top: 1px;
    left: 1px;
  }
</style>

<form
  class="contact-form"
  action="/submit-form"
  method="post"
  enctype="multipart/form-data">
  <!-- Name -->
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" />
  </div>

  <!-- Email -->
  <div>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" />
  </div>

  <!-- Service Choices -->
  <div>
    <label>What service would you like?</label>
    <div>
      <input type="checkbox" id="service1" name="service" value="Service1" />
      <label for="service1">Service1</label>
    </div>
    <!-- ... Additional services ... -->
  </div>

  <!-- Domain -->
  <div>
    <label for="domain">The domain they have/want:</label>
    <input type="text" id="domain" name="domain" />
  </div>

  <!-- Message -->
  <div>
    <label for="message">Message:</label>
    <textarea id="message" name="message"></textarea>
  </div>

  <!-- File Upload -->
  <div>
    <label for="file">Upload File:</label>
    <input type="file" id="file" name="file" />
  </div>

  <!-- Submit Button -->
  <div>
    <button class="btn" type="submit">Submit</button>
  </div>
</form>
