---
const { serviceImage, serviceTitle } = Astro.props;
---

<style>
  .service {
    flex: 0 0 calc(20% - 20px); /* Explicitly define flex-grow as 0 to avoid any growth */
    box-sizing: border-box;
    text-align: center;
    border: solid 2px var(--black);
    top: 0;
    left: 0;
    transition: all 0.15s linear 0s;
    position: relative;
    display: inline-block;
    padding: 10px;
    background-color: white;
    text-transform: uppercase;
    color: black;
    letter-spacing: 1px;
    box-shadow: -8px 8px 0 black;
    text-decoration: none;
    border-style: solid;
  }

  .service > p {
    text-align: left;
  }

  /* For medium screens - 2x3 layout */
  @media (max-width: 1000px) {
    .service {
      flex: 0 0 calc(50% - 20px); /* Take half of the container width minus the gap */
    }
  }

  /* For smaller screens - 1x6 layout */
  @media (max-width: 900px) {
    .service {
      flex: 0 0 100%; /* Take the full width of the container */
    }
  }

  .service:hover {
    top: 3px;
    left: -3px;
    box-shadow: -3px 3px 0 black;
  }

  .service:nth-child(1n):hover {
    background-color: rgb(151, 236, 255);
  }
  .service:nth-child(2n):hover {
    background-color: rgb(255, 159, 236);
  }

  .service:hover::after {
    top: 1px;
    left: -2px;
    width: 4px;
    height: 4px;
  }
  .service:hover::before {
    bottom: -2px;
    right: 1px;
    width: 4px;
    height: 4px;
  }
  .service::after {
    transition: all 0.15s linear 0s;
    content: "";
    position: absolute;
    top: 2px;
    left: -4px;
    width: 8px;
    height: 8px;
    background-color: black;
    transform: rotate(45deg);
    z-index: -1;
  }
  .service::before {
    transition: all 0.15s linear 0s;
    content: "";
    position: absolute;
    bottom: -4px;
    right: 2px;
    width: 8px;
    height: 8px;
    background-color: black;
    transform: rotate(45deg);
    z-index: -1;
  }
</style>

<div class="service">
  <img
    class="service-icon"
    src={serviceImage}
    alt=""
    width="100px"
    height="100x"
  />
  <h3>{serviceTitle}</h3>
</div>
